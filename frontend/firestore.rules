rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Block all access by default
    match /{document=**} {
      allow read, write: if false;
    }
    
    // User profiles - users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // History collection - users can only access their own history
    match /history/{userId}/entries/{entryId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Add any other collections with appropriate rules
    // Example for a shared collection:
    // match /shared/{document} {
    //   allow read: if request.auth != null;
    //   allow write: if request.auth != null && request.auth.uid == resource.data.ownerId;
    // }
  }
}
